
Conditional Operator 
#include<stdio.h>
int main(){
printf("Output=%d",5-4?4:2);
return 0;

}

#include<stdio.h>
int main(){
  
// printf("Output=%d",5-4?4:2);
int m = (5<10) ? 1 : 2 ;
printf("%d",m);

return 0;
}



#include<stdio.h>
int main(){
    int num;
    printf("Type number of rows");
    scanf("%d",&num);
    for(int i=1;i<=num;i++){
        for(int j=1;j<=num-i;j++){
            printf(" ");
        }
        for(int m=1;m<=i;m++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}



